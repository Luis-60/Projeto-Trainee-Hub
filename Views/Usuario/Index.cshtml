    <div class="container-historico">
        <div class="title">
            <h2 class="historico-title">HISTÓRICO DE TREINAMENTOS</h2>
        </div>
        <div class="conteudo">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <a asp-area="" asp-controller="Home" asp-action="Aula">
                        <img src="~/images/OIP.jpeg">
                        <div class="carousel-caption">
                            <h3>Treinamento de Compliance</h3>
                        </div>
                    </a>
                </div>

                <div class="item">
                    <a asp-area="" asp-controller="Home" asp-action="Aula">
                        <div class="carousel-caption">
                            <h3>Treinamento de RN-11</h3>
                        </div>
                        <img src="~/images/image 1.png">
                    </a>
                </div>
                
                <div class="item">
                    <a asp-area="" asp-controller="Home" asp-action="Aula">
                        <img src="~/images/image 2.png">
                        <div class="carousel-caption">
                            <h3>Treinamento de Código de Conduta e Ética</h3>
                        </div>
                    </a> 
                </div>
            </div>

            <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

