@model Projeto_Trainee_Hub.ViewModel.EmpresaUsuarioSetorTipoViewModel

@{
    ViewData["Title"] = "Criar Nova Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white rounded-top-4">
            <h4 class="mb-0">🏢 Criar Nova Empresa</h4>
        </div>
        <div class="card-body">
            <form asp-action="CriarEmpresas" asp-controller="Admin" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NomeEmpresa" class="form-label"></label>
                        <input asp-for="NomeEmpresa" class="form-control" />
                        <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmailEmpresa" class="form-label"></label>
                        <input asp-for="EmailEmpresa" class="form-control" type="email" />
                        <span asp-validation-for="EmailEmpresa" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Telefone" class="form-label"></label>
                        <input asp-for="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Codigo" class="form-label"></label>
                        <input asp-for="Codigo" class="form-control" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Administracao" asp-controller="Admin" class="btn btn-secondary me-2">Voltar</a>
                    <button type="submit" class="btn btn-success">Criar Empresa</button>
                </div>
            </form>
        </div>
    </div>
</div>
