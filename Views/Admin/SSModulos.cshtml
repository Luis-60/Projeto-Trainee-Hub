@model Projeto_Trainee_Hub.ViewModel.TreinamentoUsuariosViewModel
@{
    ViewData["Title"] = "Sistema de Submiss√£o de M√≥dulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="texto_modulo">
    <div class="d-flex align-items-center gap-4">
        <h1 class="m-0">@Model.treinamentos.Nome</h1>
        <p class="m-0 fs-1">@Model.treinamentos.Descricao</p>
    </div>
    <div class="d-flex justify-content-end align-items-center gap-3 p-3">
    <button class="btn btn-success adicionar">Adicionar M√≥dulo</button>

    <button class="btn btn-primary btnAbrirAdd" onclick="AbrirAdd()">‚úèÔ∏è Editar</button>
    <div class="btn-group">
        <form asp-controller="Treinamentos" asp-action="Deletar" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="IdTreinamentos" value="@Model.treinamentos.IdTreinamentos" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que quer deletar o treinamento?')">
                üóë Delete
            </button>
        </form>
    </div>
</div>
<hr>

<div class="modal">
    <div class="modal-treinamento">
        <h1 class="titulo-modal">EDITAR TREINAMENTO</h1>
        <form asp-controller="Treinamentos" asp-action="Editar" method="post" enctype="multipart/form-data">
            <div class="inputnome">
                <label>Nome:</label><br>
                <input asp-for="@Model.treinamentos.Nome" placeholder="Insira o nome do treinamento" class="input-nome" type="text" id="nome" required>
            </div>      

            <div class="input-instrutor">
                <label>Instrutor:</label><br>
                <input asp-for="@Model.treinamentos.Instrutor" placeholder="Insira o nome do instrutor" class="instrutor" type="text" id="instrutor" required>
            </div>

            <label>Descri√ß√£o:</label><br>
            <textarea placeholder="Descreva o treinamento" id="descricao" asp-for="@Model.treinamentos.Descricao" required></textarea>
            
            <div class="container-data">
                <div class="container-datainicio">
                    <label>Data de In√≠cio:</label><br>
                    <input type="date" id="datainicio" asp-for="@Model.treinamentos.DataInicio" required>
                </div>
                <div class="container-datafim">
                    <label>Data de Fim:</label><br>
                    <input type="date" id="datafim" asp-for="@Model.treinamentos.DataFim" required>
                </div>
            </div>
            
           <label id="imagem">Imagem Ilustrativa:</label><br>

            <label asp-for="@Model.File" class="drop-container" id="dropcontainer"> 
                <span class="drop-title">Insira o Arquivo aqui</span>
                ou
                <input asp-for="@Model.File" type="file" id="images-treinamento" accept="image/*">
            </label>

            @if (!string.IsNullOrEmpty(Model.treinamentos.Imagem))
            {
                <div class="mt-2 text-muted">
                    üìÅ Arquivo atual: <strong>@Model.treinamentos.Imagem</strong>
                </div>
            }
            
            <input type="hidden" id="treinamento" asp-for="@Model.treinamentos.IdTreinamentos" value="@Model.treinamentos.IdTreinamentos">
            <input type="hidden" id="duracao" asp-for="@Model.treinamentos.Duracao" value="0"> 
            <input type="hidden" id="entidades" asp-for="@Model.treinamentos.Entidades" value="@Model.usuarios?.IdEmpresa">
            <input type="hidden" id="idEmpresa" asp-for="@Model.treinamentos.IdEmpresa" value="@Model.usuarios?.IdEmpresa">
            <input type="hidden" id="IdCriador" asp-for="@Model.treinamentos.IdCriador" value="@Model.usuarios?.IdUsuarios">

            <div class="buttons"> 
                <button class="btnAddTreinamento" type="submit">EDITAR</button>
                <button class="btnClose" onclick="closeModal()">SAIR</button>
            </div>   
        </form>            
    </div>
</div>

<div class="modal">
        <div class="modal-modulo">
            <div class="icon-x">
                <i id="close" class='bx bx-x close'>
                
                </i>
            </div>
            <h1 class="titulo-modal">CRIAR M√ìDULO</h1>

            <div class="inputnome">
                <label for="nome"name="nome">Nome:</label><br>
                <input placeholder="Insira o nome do m√≥dulo" class="input-nome" type="text" id="nome" name="nome">
            </div>      
            <label for="descricao" name="descricao">Descri√ß√£o:</label><br>
            <textarea placeholder="Descreva o m√≥dulo" id="descricao" name="descricao"></textarea>
            <div class="buttons"> 
                <button class="btnAddTreinamento" onclick="addTreinamento()">CRIAR</button>
                <button class="btnClose" onclick="closeModal()">SAIR</button>
            </div>
        </div>
    </div>
